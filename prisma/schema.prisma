
datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}
enum Role {
  USER
  EMPLOYEE
  ADMIN
}
enum RecentActivity {
  completed
  pending
  revisit
}

model User {
  id          Int       @id @default(autoincrement())
  username    String    @unique
  email       String    @unique
  password    String
  createdAt   DateTime  @default(now())
  isOnline    Boolean   @default(false)
  role      Role   @default(USER)

  profile     Profile?
  quotes      Quote[]

  // One-to-one relation with Employee
  // employee    Employee? @relation(fields: [employeeId], references: [id])
  // employeeId  Int?      @unique
}

model Profile {
  id        Int                  @id @default(autoincrement())
  firstname String
  lastname  String
  city      String
  state     String
  zip       String
  phone     String
  userId    Int                  @unique
  user      User                 @relation(fields: [userId], references: [id])

  services  ProfileServices[]    // One-to-many relation
  activities ProfileActivity[] // One-to-many relation
}

model ProfileServices {
  id             Int      @id @default(autoincrement())
  totalServices  Int      @default(0)
  rating         Int      @default(0)
  upcoming       Int      @default(0)
  status         String   @default("Active")

  profileId      Int
  profile        Profile  @relation(fields: [profileId], references: [id])
}

model ProfileActivity {
  id              Int            @id @default(autoincrement())
  services        String
  recentActivity  RecentActivity

  profileId       Int
  profile         Profile        @relation(fields: [profileId], references: [id])
}



model Guest {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  quotes    Quote[]
}

model Quote {
  id                Int      @id @default(autoincrement())
  userId            Int?     
  guestId           Int?   
  fullName          String
  email             String
  phone             String
  address           String
  zip               String
  serviceType       String
  preferredDate     DateTime?
  additionalDetails String?
  createdAt         DateTime @default(now())

  user  User?  @relation(fields: [userId], references: [id])
  guest Guest? @relation(fields: [guestId], references: [id])
}

